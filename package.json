{
	"name": "japi-presence",
	"displayName": "JAPI Presence",
	"description": "An easy way to display what your working on, from anywhere you can access JAPI.",
	"version": "0.3.1",
	"publisher": "japirest",
	"repository": "https://github.com/JapiRest/vsc-presence",
  "icon": "icons/JapiRest.png",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "japi.configure",
				"title": "JAPI: Configure"
			},
			{
				"command": "japi.statusbar.hide",
				"title": "JAPI: Status Bar: Hide"
			},
			{
				"command": "japi.statusbar.show",
				"title": "JAPI: Status Bar: Show"
			},
			{
				"command": "japi.presence.send",
				"title": "JAPI: Presence: Update Now"
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "JAPI Configuration",
				"properties": {
					"japi.api.token": {
						"type": "string",
						"title": "API Token",
						"description": "Your JAPI API token",
            "default": ""
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/lodash-es": "^4.17.4",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/node-fetch": "^2.5.12",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"lodash-es": "^4.17.21",
		"node-fetch": "^2.6.1"
	}
}
